{
  "name": "@dice-roll-node-app/roll-dice-svc",
  "version": "0.1.0",
  "type": "module",
  "description": "dice roller",
  "keywords": [],
  "license": "MIT",
  "author": "SRTd Solutions",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist pnpm.lock.yaml tsconfig.tsbuildinfo node_modules",
    "dev": "pnpm migrate:up && pnpm tsx watch server.ts",
    "dev:local": "DOTENV_FILE_PATH=.env.local pnpm migrate:up && DOTENV_FILE_PATH=.env.local pnpm tsx watch server.ts",
    "docs": "typedoc --out docs *",
    "format": "prettier --ignore-path=.prettierignore --config .prettierrc '**/*.{ts,tsx,json}' --write",
    "lint": "eslint . -c eslint.config.mjs",
    "lint:fix": "eslint . -c eslint.config.mjs --fix",
    "migrate:create": "[ -z $DOTENV_FILE_PATH ] && export DOTENV_FILE_PATH=.env.local; NODE_OPTIONS='--import=tsx' mikro-orm migration:create",
    "migrate:down": "[ -z $DOTENV_FILE_PATH ] && export DOTENV_FILE_PATH=.env.local; NODE_OPTIONS='--import=tsx' mikro-orm migration:down",
    "migrate:init": "if [ ! -f migrations/Migration* ]; then [ -z $DOTENV_FILE_PATH ] && export DOTENV_FILE_PATH=.env.local; NODE_OPTIONS='--import=tsx' mikro-orm migration:create --initial; fi",
    "migrate:up": "[ -z $DOTENV_FILE_PATH ] && export DOTENV_FILE_PATH=.env.local; NODE_OPTIONS='--import=tsx' mikro-orm migration:up",
    "seed": "[ -z $DOTENV_FILE_PATH ] && export DOTENV_FILE_PATH=.env.local; NODE_OPTIONS='--import=tsx' mikro-orm seeder:run",
    "start": "node --import=tsxDOTENV_FILE_PATH=.env.prod DOTENV_FILE_PATH=.env.prod pnpm migrate:up &&  dist/server.js",
    "test": "pnpm vitest --passWithNoTests"
  },
  "dependencies": {
    "@dice-roll-node-app/core": "workspace:*",
    "@dice-roll-node-app/monitoring": "workspace:*",
    "@dice-roll-node-app/universal-sdk": "workspace:*",
    "@forklaunch/common": "~0.6.22",
    "@forklaunch/core": "~0.15.12",
    "@forklaunch/express": "~0.9.31",
    "@forklaunch/internal": "~0.3.22",
    "@forklaunch/validator": "~0.10.22",
    "@mikro-orm/core": "^6.5.9",
    "@mikro-orm/migrations": "^6.5.9",
    "@mikro-orm/postgresql": "^6.5.9",
    "@mikro-orm/reflection": "^6.5.9",
    "@mikro-orm/seeder": "^6.5.9",
    "ajv": "^8.17.1",
    "dotenv": "^17.2.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@forklaunch/testing": "~0.0.11",
    "@mikro-orm/cli": "^6.5.9",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/qs": "^6.14.0",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript-eslint": "^8.46.2"
  },
  "mikro-orm": {
    "manifest_paths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}